<div>
  <h1 class="font-bold text-4xl">Locations#index</h1>
  <p>Find me in app/views/locations/index.html.erb</p>
</div>

<h1>Location name: <%= @location.name %></h1>
<p>Location zone count: <%= @location.zoneCount %></p>

<ul>
  <% @location.monsters.each do |monster| %>
    <%= link_to monster['name'], monster_path(monster['name']) %>
  <% end %>
</ul>

<%= link_to 'Back to Locations List', locations_path %>